{
  "mcpServers": {
    "ai-docs-vector-db": {
      "command": "uv",
      "args": [
        "run",
        "mcp-server"
      ],
      "cwd": "/path/to/ai-docs-vector-db-hybrid-scraper",
      "env": {
        "OPENAI_API_KEY": "your-openai-api-key",
        "QDRANT_URL": "http://localhost:6333",
        "FIRECRAWL_API_KEY": "your-firecrawl-api-key-optional"
      }
    },
    "ai-docs-vector-db-enhanced": {
      "command": "python",
      "args": [
        "-m",
        "src.enhanced_mcp_server"
      ],
      "cwd": "/path/to/ai-docs-vector-db-hybrid-scraper",
      "env": {
        "OPENAI_API_KEY": "your-openai-api-key",
        "QDRANT_URL": "http://localhost:6333",
        "FIRECRAWL_API_KEY": "your-firecrawl-api-key-optional"
      }
    }
  }
}
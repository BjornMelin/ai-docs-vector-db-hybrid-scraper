{
  "environment": "production",
  "debug": false,
  "log_level": "INFO",
  "embedding_provider": "fastembed",
  "crawl_provider": "crawl4ai",
  "cache": {
    "enable_caching": true,
    "enable_local_cache": true,
    "enable_dragonfly_cache": false,
    "local_max_size": 2000,
    "local_max_memory_mb": 200.0
  },
  "qdrant": {
    "url": "http://localhost:6333",
    "collection_name": "local_documents",
    "batch_size": 100,
    "quantization_enabled": true
  },
  "fastembed": {
    "dense_model": "BAAI/bge-base-en-v1.5",
    "sparse_model": "qdrant/bm25",
    "retrieval_mode": "hybrid",
    "cache_dir": "./models",
    "max_length": 512,
    "batch_size": 32
  },
  "crawl4ai": {
    "headless": true,
    "max_concurrent_crawls": 5,
    "page_timeout": 30.0,
    "remove_scripts": true,
    "remove_styles": true
  },
  "chunking": {
    "strategy": "enhanced",
    "chunk_size": 1600,
    "chunk_overlap": 200,
    "token_chunk_size": 600,
    "token_chunk_overlap": 120,
    "token_model": "cl100k_base",
    "json_max_chars": 20000,
    "enable_semantic_html_segmentation": true,
    "normalize_html_text": true
  },
  "performance": {
    "max_concurrent_requests": 10,
    "request_timeout": 30.0,
    "max_memory_usage_mb": 1000.0,
    "default_rate_limits": {
      "crawl4ai": {
        "max_calls": 10,
        "time_window": 1
      },
      "qdrant": {
        "max_calls": 50,
        "time_window": 1
      }
    }
  },
  "security": {
    "api_key_required": false,
    "enable_rate_limiting": false
  },
  "_comment": "This configuration is optimized for local-only operation without any cloud services"
}

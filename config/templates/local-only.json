{
  "environment": "production",
  "debug": false,
  "log_level": "INFO",
  "embedding_provider": "fastembed",
  "crawl_provider": "crawl4ai",
  "cache": {
    "enable_caching": true,
    "enable_dragonfly_cache": false,
    "dragonfly_url": "redis://localhost:6379",
    "ttl_embeddings": 86400,
    "ttl_crawl": 3600,
    "ttl_queries": 7200,
    "ttl_search_results": 3600
  },
  "qdrant": {
    "url": "http://localhost:6333",
    "collection_name": "local_documents",
    "batch_size": 100,
    "quantization_enabled": true
  },
  "fastembed": {
    "model": "BAAI/bge-base-en-v1.5",
    "cache_dir": "./models",
    "max_length": 512,
    "batch_size": 32
  },
  "crawl4ai": {
    "headless": true,
    "max_concurrent_crawls": 5,
    "page_timeout": 30.0,
    "remove_scripts": true,
    "remove_styles": true
  },
  "chunking": {
    "strategy": "enhanced",
    "chunk_size": 1600,
    "chunk_overlap": 200,
    "preserve_function_boundaries": true
  },
  "performance": {
    "max_concurrent_requests": 10,
    "request_timeout": 30.0,
    "max_memory_usage_mb": 1000.0,
    "default_rate_limits": {
      "crawl4ai": {
        "max_calls": 10,
        "time_window": 1
      },
      "qdrant": {
        "max_calls": 50,
        "time_window": 1
      }
    }
  },
  "security": {
    "api_key_required": false,
    "enable_rate_limiting": false
  },
  "_comment": "This configuration is optimized for local-only operation without any cloud services"
}

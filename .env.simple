# Simple Mode Configuration
# Optimized for solo developers with minimal complexity

# Application Mode
AI_DOCS_MODE=simple
AI_DOCS_ENVIRONMENT=development
AI_DOCS_DEBUG=true
AI_DOCS_LOG_LEVEL=INFO

# Resource Limits (Simple Mode)
AI_DOCS_CRAWL4AI__MAX_CONCURRENT_CRAWLS=5
AI_DOCS_PERFORMANCE__MAX_CONCURRENT_REQUESTS=5
AI_DOCS_PERFORMANCE__MAX_MEMORY_USAGE_MB=500
AI_DOCS_CACHE__LOCAL_MAX_SIZE=500
AI_DOCS_CACHE__LOCAL_MAX_MEMORY_MB=50

# Simple Service Configuration
AI_DOCS_CACHE__ENABLE_DRAGONFLY_CACHE=false
AI_DOCS_MONITORING__ENABLED=true
AI_DOCS_MONITORING__ENABLE_METRICS=false
AI_DOCS_OBSERVABILITY__ENABLED=false

# Disable Enterprise Features
AI_DOCS_DEPLOYMENT__ENABLE_DEPLOYMENT_SERVICES=false
AI_DOCS_DEPLOYMENT__ENABLE_AB_TESTING=false
AI_DOCS_DEPLOYMENT__ENABLE_BLUE_GREEN=false
AI_DOCS_DEPLOYMENT__ENABLE_CANARY=false
AI_DOCS_RAG__ENABLE_RAG=false
AI_DOCS_HYDE__ENABLE_HYDE=false

# Basic Provider Configuration
AI_DOCS_EMBEDDING_PROVIDER=fastembed
AI_DOCS_CRAWL_PROVIDER=crawl4ai

# Qdrant Configuration (Simple)
AI_DOCS_QDRANT__URL=http://localhost:6333
AI_DOCS_QDRANT__COLLECTION_NAME=documents
AI_DOCS_QDRANT__BATCH_SIZE=50

# Chunking Configuration (Simple)
AI_DOCS_CHUNKING__CHUNK_SIZE=1000
AI_DOCS_CHUNKING__CHUNK_OVERLAP=200
AI_DOCS_CHUNKING__STRATEGY=basic

# Security (Simple)
AI_DOCS_SECURITY__REQUIRE_API_KEYS=false
AI_DOCS_SECURITY__ENABLE_RATE_LIMITING=true
AI_DOCS_SECURITY__RATE_LIMIT_REQUESTS=50

# Simplified Database
AI_DOCS_DATABASE__DATABASE_URL=sqlite+aiosqlite:///data/simple.db
AI_DOCS_DATABASE__POOL_SIZE=5
AI_DOCS_DATABASE__MAX_OVERFLOW=2